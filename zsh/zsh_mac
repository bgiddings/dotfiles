### Local stuff ###
#PATH=/usr/local/sbin:/usr/local/opt/icu4c/bin:/usr/local/opt/icu4c/sbin:$PATH
PATH="/usr/local/sbin:/usr/local/opt/coreutils/libexec/gnubin:$PATH"
PATH="$PATH:$HOME/.rvm/bin"
export PATH

MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
export MANPATH

# ZSH Completions for Brew (MacOS only)
fpath=($HOME/homebrew/share/zsh-completions $fpath)

source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /usr/local/share/zsh-history-substring-search/zsh-history-substring-search.zsh

# Node.js
LDFLAGS=-L/usr/local/opt/icu4c/lib
CPPFLAGS=-I/usr/local/opt/icu4c/include

PKG_CONFIG_PATH=/usr/local/opt/icu4c/lib/pkgconfig

export LDFLAGS
export CPPFLAGS
export PKG_CONFIG_PATH


# bind UP and DOWN arrow keys
zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down

# bind UP and DOWN arrow keys (compatibility fallback
# for Ubuntu 12.04, Fedora 21, and MacOSX 10.9 users)
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

# bind P and N for EMACS mode
bindkey -M emacs '^P' history-substring-search-up
bindkey -M emacs '^N' history-substring-search-down

# bind k and j for VI mode
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down

# Add SSH Keys
ssh-add -A &> /dev/null

dl='/Users/merc/Downloads/Incoming'
: ~dl
